#             diff = target - num

#             if diff in hash_dict:
#                 return [hash_dict[diff] + 1, i + 1]

#             hash_dict[num] = i

class Solution:
    def twoSum(self, numbers: List[int], target: int) -> List[int]:

        left =0
        right = len(numbers)-1

        while left < right :
            total = numbers[left] + numbers[right]

            if total == target:
                return [left+1 , right+1]

            elif total < target:
                left +=1

            else:
                right -= 1

        return []





















